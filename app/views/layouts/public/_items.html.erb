  <div class="items">
    <% items.each_with_index do | item, i | %>

      <%# mobile %>
      <% if i < 3 %>
      <div class="item visible-xs pull-left">
        <%# link_to(item_path(item_url_params(item))) do %>
        <%= link_to(item_path(item)) do  %>
          <article class="card">
            <%= image_tag item.mainImage.url, class: 'card-img' %>
            <div class="card-content">
              <div class="card-title text-center"><%= item.itemName.truncate(12) %></div>
            </div>
          </article>
        <% end %>
      </div>
      <% end %>
      <%# not_mobile %>
      <div class="item hidden-xs">
        <%# link_to(item_path(item_url_params(item))) do %>
        <%= link_to(item_path(item)) do %>
        <article class="card pull-left">
          <%= image_tag item.mainImage.url, class: 'card-img' %>
          <div class="card-content">
            <div class="card-title"><%= item.itemName %></div>
            <div class="card-text"><%= dispYen(item.price) %></div>
          </div>
        </article>
        <% end %>
      </div>
    <% end %>
  </div>
<div class="clearfix"></div>
