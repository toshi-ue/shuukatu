

<div class="row col-md-6 col-md-offset-3">

<!-- <p><strong>BEGIN app/views/public/settings/addresses/new.html.erb</strong></p> -->

<%= form_for @address, url: settings_addresses_path, method: :post do |f| %>

  <%= render partial: 'address_form', locals: {f: f} %>

  <div class="field col-md-12 text-center">
    <%= f.check_box :defaultflg, value: false %>
    <%= f.label :defaultflg, '既定の住所にする'%>
  </div>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="actions text-center">
      <%= f.submit '登録する', class: 'btn btn-default btn-md'%>
    </div>

    <div class="text-center"><%= link_to '戻る', settings_addresses_path, class: 'btn btn-default btn-md' %>
    </div>
  </div>

<% end %>

<!-- <p><strong> END app/views/public/settings/addresses/new.html.erb</strong></p> -->

</div>
