<h3 class="text-center">注文の確定</h3>
<div class="col-xs-12 col-sm-10 col-sm-offset-1">
  <div class="col-sm-8">
    <div id="delivery-and-credential" class="row">
      <%# 配送先 %>
      <h4>配送先</h4>
      <hr>
      <div class="col-xs-12 col-sm-12">
        <%= render partial: 'address', locals: {order: @order} %>
      </div>
      <%# クレジット情報 %>
      <h4>クレジットカード</h4>
      <hr>
      <div id="credential" class="col-xs-12 col-sm-12">
        <%= render partial: 'credit', locals: {order: @order} %>
      </div>
    </div>
    <%# カート商品一覧 %>
    <h4>カートに入っている商品</h4>
    <hr>
    <div id="cart-items" class="row">
      <%= render partial: 'cartitems' %>
    </div>
  </div>
  <div class="pbox col-sm-4">
    <div id="confirm-orders">
      <div id="checkOut" class="text-center">
        <%= form_for @order, url: orders_path, method: :post do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :total_price, value: @total_price %>
        <%= f.hidden_field :address_id, value: @order.address_id %>
        <%= f.submit '注文を確定する', data: { disable_with: '送信中' }, class: 'btn btn-warning' %>
        <% end %>
      </div>

      <%# 確定 %>
      <div>
        <div class="text-center">
          <strong>
            商品の小計： <%= number_to_currency(@total_price, :format => "%u%n", :precision => 0, :unit =>"¥") %>
          </strong>
        </div>

        <div id="keep-shopping" class="text-center">
          <%= link_to '買い物を続ける', root_path %>
        </div>
      </div>
    </div>
  </div>
</div>
