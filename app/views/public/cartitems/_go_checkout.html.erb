<!-- _go_checkout.html.erb -->

<% unless @cartitems.blank? %>
<div id="go-checkout" class="col-xs-12 col-sm-2">
  <div class="row hidden-xs">
    <div id="total_count" class="text-center">
      小計(<%= @total_count %>点)
    </div>
    <div id="total_price" class="text-center">
      <%= number_to_currency(@total_price, :format => "%u%n", :precision => 0, :unit =>"¥") %>
    </div>
    <div class="text-center">
      <%= link_to 'レジへ進む', new_order_path, class: 'btn btn-warning btn-sm col-sm-10 col-sm-offset-1' %>
    </div>
  </div>
  <div class="visible-xs">
    <p class="text-center">
      <span class="total_count">小計(<%= @totalcount %>点)</span>
      <span
        class="total_price"><%= number_to_currency(@total_price, :format => "%u%n", :precision => 0, :unit =>"¥") %></span>
    </p>
    <div class="text-center">
      <%= link_to 'レジへ進む', new_order_path, class: 'btn btn-warning btn-sm btn-margin col-sm-9' %>
    </div>
  </div>
</div>

<% end %>
