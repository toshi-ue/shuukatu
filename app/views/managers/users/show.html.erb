<%# mobile %>
<div class="visible-xs">
  <div class="col-xs-12 back_to_orders">
    <div class="text-center">
      <%= link_to '全注文履歴へ戻る', managers_orders_path, class: 'btn btn-default'  %>
    </div>
  </div>
  <caption class="text-center"><strong>配送先一覧</strong></caption>
  <div id="addresses">
    <% @user.addresses.each do |address| %>
    <% if address.defaultflg == true %>
    <div id="defaultAddress" class="text-center alert alert-warning">
       <caption><strong>既定住所</strong></caption>
      <%= render partial: 'address', locals: {address: address} %>
    </div>
    <% else %>
    <%= render partial: 'address', locals: {address: address} %>
    <% end %>
    <% end %>
  </div>
  <div class="col-xs-12">
    <h3 class="text-center">注文履歴</h3>
    <%= render partial: 'partials/manager_orders', locals: {orders: @orders} %>
  </div>
</div>



<%# not-mobile %>
<div class="hidden-xs">
  <div class=" col-sm-12 back_to_orders">
    <div class="text-center">
      <%= link_to '全注文履歴へ戻る', managers_orders_path, class: 'btn btn-default'  %>
    </div>
  </div>
  <div class="col-sm-4 col-sm-offset-1">
    <h3 class="text-center">ユーザー情報詳細</h3>
    <div class="text-center">
      メールアドレス：
      <%= @user.email %>
    </div>
    <table class="table">
      <caption class="text-center"><strong>配送先一覧</strong></caption>
      <% @user.addresses.each do |address| %>
      <tr>
        <td>
          <% if address.defaultflg == true %>
          <div class="text-center alert alert-warning">
            既定住所<br>
            <%= render partial: 'address', locals: {address: address} %>
          </div>
          <% else %>
            <%= render partial: 'address', locals: {address: address} %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="col-sm-6">
    <h3 class="text-center">注文履歴</h3>
    <%= render partial: 'partials/orders', locals: {orders: @orders} %>
  </div>
</div>
