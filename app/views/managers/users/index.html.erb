<div class="row">
  <div class="hidden-xs">
    <div class="col-sm-2 col-md-2 row-eq-height">
      <%= render 'managers/partials/sidebar' %>
    </div>
  </div>

  <div class="usersList col-sm-10 col-md-10 row-eq-height">
    <h3>ユーザー一覧</h3>
    <% unless @users.blank? %>

      <table class="table table-hover">
        <thead>
          <th>ユーザー名<br>(メールアドレス)</th>
          <th>最終ログイン日時</th>
          <th>登録日時</th>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to "#{user.email}", managers_user_path(id: user.id) %>
            </td>
            <td><%= link_to "#{user.last_sign_in_at.to_s(:time_manager)}", managers_user_path(id: user.id) %></td>
            <td><%= link_to "#{user.created_at.to_s(:time_manager)}", managers_user_path(id: user.id) %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <div class="text-center">
        <strong>登録ユーザーはまだありません</strong>
      </div>
    <% end %>

  </div>
</div>
